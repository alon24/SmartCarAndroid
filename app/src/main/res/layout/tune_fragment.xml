<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Tune Car paramaters"
        android:textAlignment="center"
		android:id="@+id/textView2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/freqHeader"
            android:text="Frequency:"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/freqText"
            android:text="0"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/freqHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/freqSeekeBar"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:max="600"
            android:progress="40"
            android:indeterminate="false"
            android:layout_toEndOf="@+id/freqHeader"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pwrHeader"
            android:text="Power:"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/pwrText"
            android:text="0"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@+id/pwrHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <SeekBar
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/pwrSeekeBar"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:max="600"
            android:progress="40"
            android:indeterminate="false"
            android:layout_toEndOf="@+id/pwrHeader"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
